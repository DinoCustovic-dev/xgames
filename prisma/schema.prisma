generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Console {
  id        Int      @id @default(autoincrement())
  name      String   @default("Console")
  number    Int      @unique
  status    String   @default("free") // "free" or "occupied"
  updatedAt DateTime @updatedAt
  games     GameConsole[]
}

model Game {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  imageUrl  String?
  consoles  GameConsole[]
}

model GameConsole {
  id        Int @id @default(autoincrement())
  game      Game @relation(fields: [gameId], references: [id], onDelete: Cascade)
  gameId    Int
  console   Console @relation(fields: [consoleId], references: [id], onDelete: Cascade)
  consoleId Int

  @@unique([gameId, consoleId])
}

model Admin {
  id           Int      @id @default(autoincrement())
  passwordHash String
  createdAt    DateTime @default(now())
}
